<div class="container my-5">
  <h1 class="text-center text-primary mb-4">Restaurants</h1>

  <% @restaurants.each do |restaurant| %>
    <div class="card mb-3 shadow-sm">
      <div class="card-body">
        <h4 class="card-title">
          <%= link_to restaurant.name, restaurant_path(restaurant), class: "text-decoration-none text-dark" %>
        </h4>
        <ul class="list-unstyled">
          <li><strong>Address:</strong> <%= restaurant.address %></li>
          <li><strong>Phone:</strong> <%= restaurant.phone_number %></li>
          <li><strong>Category:</strong> <%= restaurant.category.capitalize %></li>
        </ul>
      </div>
    </div>
  <% end %>
</div>
